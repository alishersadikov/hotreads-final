<h2>This is the top ten list:</h2>

  <table>
    <tr>
      <th>URL</th>
      <th>Viewed times</th>
      <th>Status</th>
    </tr>
    <% @hotreads.each_with_index do |hotread, index| %>
    <tr>
      <td><%=hotread.url%></td>
      <td><%=hotread.hit_count%></td>
      <td>
        <% if index == 0%>
          top link
        <% else %>
          hot
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
